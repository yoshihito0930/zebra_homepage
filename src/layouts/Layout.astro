---
import { createFontLinks, fontDisplay } from '../fonts.js';

interface Props {
	title?: string;
	description?: string;
	ogImage?: string;
	canonicalUrl?: string;
}

const { 
	title = 'スタジオゼブラ | 東京都渋谷区の写真スタジオ', 
	description = '東京都渋谷区にある、代々木駅・新宿駅至近の美しい白ホリゾントを備えたレンタル撮影スタジオ。豊富なプロ機材が無料で使えてコスパ抜群。ポートレート、宣材、アパレル、商品撮影にもおすすめ。', 
	ogImage = '/images/ogp.jpg',
	canonicalUrl = Astro.url.pathname
} = Astro.props;

// Head用メタデータ設定
const fontLinks = createFontLinks();
const currentUrl = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL(ogImage, Astro.site);
const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "スタジオゼブラ",
  "image": ogImageUrl.toString(),
  "url": currentUrl.toString(),
  "telephone": "+819067070936",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "千駄ヶ谷5-28-10",
    "addressLocality": "渋谷区",
    "addressRegion": "東京都",
    "postalCode": "151-0051",
    "addressCountry": "JP"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 35.6849996,
    "longitude": 139.7039247
  },
  "openingHoursSpecification": {
    "@type": "OpeningHoursSpecification",
    "dayOfWeek": [
      "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"
    ],
    "opens": "09:00",
    "closes": "22:00"
  },
  "priceRange": "¥¥"
};

import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={currentUrl.toString()} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl.toString()} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageUrl.toString()} />
		<meta property="og:locale" content="ja_JP" />
		<meta property="og:site_name" content="スタジオゼブラ" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@studiozebra1st" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageUrl.toString()} />
		
		<!-- Fonts Optimization -->
		{fontLinks.map((link) => (
			<link rel={link.rel} href={link.href} {...(link.crossorigin && { crossorigin: '' })} {...(link.as && { as: link.as })} />
		))}
		
		<!-- 構造化データ -->
		<script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
		
		<!-- パフォーマンス最適化 -->
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="format-detection" content="telephone=no,address=no,email=no" />
		
		<!-- Mobile Optimization -->
		<meta name="theme-color" content="#e63946" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
	</head>
	<body>
		<Navigation />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	/* ブレイクポイント変数の定義 */
	:root {
		--color-primary: #333333;
		--color-secondary: #666666;
		--color-accent: #e63946;
		--color-background: #ffffff;
		--color-text: #333333;
		--font-family: 'Noto Sans JP', sans-serif;
		
		/* レスポンシブデザイン用のブレイクポイント */
		--breakpoint-xs: 480px;    /* スマートフォン縦向き */
		--breakpoint-sm: 640px;    /* スマートフォン横向き */
		--breakpoint-md: 768px;    /* タブレット縦向き */
		--breakpoint-lg: 1024px;   /* タブレット横向き/小型デスクトップ */
		--breakpoint-xl: 1280px;   /* 大型デスクトップ */
		
		/* フォントサイズのスケール */
		--font-size-base: 1rem;
		--font-size-xs: 0.75rem;   /* 12px */
		--font-size-sm: 0.875rem;  /* 14px */
		--font-size-md: 1rem;      /* 16px */
		--font-size-lg: 1.125rem;  /* 18px */
		--font-size-xl: 1.25rem;   /* 20px */
		--font-size-2xl: 1.5rem;   /* 24px */
		--font-size-3xl: 1.875rem; /* 30px */
		--font-size-4xl: 2.25rem;  /* 36px */
		
		/* スペーシング変数 */
		--spacing-xs: 0.5rem;
		--spacing-sm: 1rem;
		--spacing-md: 1.5rem;
		--spacing-lg: 2rem;
		--spacing-xl: 3rem;
	}
	
	/* ボックスサイジング設定 */
	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}
	
	html {
		font-family: var(--font-family);
		background-color: var(--color-background);
		color: var(--color-text);
		font-size: 16px; /* ベースフォントサイズ */
		-webkit-text-size-adjust: 100%; /* iOSでの自動テキストサイズ調整を防止 */
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		line-height: 1.6;
	}
	
	main {
		flex: 1;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-sm);
	}
	
	/* レスポンシブイメージ */
	img {
		max-width: 100%;
		height: auto;
		display: block; /* 画像の下の余白を削除 */
	}
	
	/* レスポンシブテーブル */
	table {
		width: 100%;
		border-collapse: collapse;
		margin: var(--spacing-md) 0;
		overflow-x: auto;
		display: block; /* モバイルで横スクロール可能にする */
	}
	
	@media (min-width: 768px) {
		table {
			display: table; /* 大きな画面では通常のテーブル表示 */
		}
	}
	
	a {
		color: var(--color-accent);
		text-decoration: none;
		transition: color 0.2s ease;
	}
	
	a:hover {
		text-decoration: underline;
	}
	
	/* タイポグラフィ - レスポンシブ */
	h1, h2, h3, h4, h5, h6 {
		margin: 0 0 var(--spacing-sm) 0;
		line-height: 1.2;
		font-weight: 700;
	}
	
	h1 {
		font-size: var(--font-size-3xl);
	}
	
	h2 {
		font-size: var(--font-size-2xl);
	}
	
	h3 {
		font-size: var(--font-size-xl);
	}
	
	h4 {
		font-size: var(--font-size-lg);
	}
	
	/* コンテナクラス */
	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-sm);
	}
	
	/* グリッドシステム */
	.grid {
		display: grid;
		grid-template-columns: repeat(12, 1fr);
		gap: var(--spacing-md);
	}
	
	/* セクションの間隔 */
	.section {
		margin: var(--spacing-xl) 0;
	}
	
	/* モバイルファースト - 小さな画面用の基本スタイル */
	
	/* タブレット以上 (768px以上) */
	@media (min-width: 768px) {
		main {
			padding: 0 var(--spacing-md);
		}
		
		h1 {
			font-size: var(--font-size-4xl);
		}
		
		h2 {
			font-size: var(--font-size-3xl);
		}
		
		.container {
			padding: 0 var(--spacing-md);
		}
	}
	
	/* デスクトップ (1024px以上) */
	@media (min-width: 1024px) {
		main {
			padding: 0 var(--spacing-lg);
		}
		
		.container {
			padding: 0 var(--spacing-lg);
		}
	}
	
	/* ユーティリティクラス */
	.hidden-xs {
		display: none;
	}
	
	@media (min-width: 480px) {
		.hidden-xs {
			display: initial;
		}
		.visible-xs {
			display: none;
		}
	}
</style>
