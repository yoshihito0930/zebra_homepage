<style>
  .footer {
    background-color: #f5f5f5;
    padding: 3rem 0 1rem;
    margin-top: 3rem;
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .footer-top {
    display: flex;
    justify-content: center;
    margin-bottom: 2rem;
  }
  
  #to-top {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-accent);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
  
  #to-top:hover {
    background-color: #c62b38;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-logo img {
    margin-bottom: 1rem;
    max-width: 180px;
    height: auto;
  }
  
  .address {
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    line-height: 1.5;
  }
  
  .tel {
    font-size: 0.9rem;
  }
  
  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 0.5rem;
  }
  
  .footer-nav a {
    color: var(--color-primary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }
  
  .footer-nav a:hover {
    color: var(--color-accent);
  }
  
  .footer-cta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .btn-primary {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    text-align: center;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s ease;
  }
  
  .btn-primary:hover {
    background-color: #c62b38;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-primary);
    color: white;
    transition: background-color 0.2s ease;
  }
  
  .social-links a:hover {
    background-color: var(--color-accent);
  }
  
  .copyright {
    text-align: center;
    border-top: 1px solid #ddd;
    padding-top: 1rem;
    font-size: 0.8rem;
    color: var(--color-secondary);
  }
  
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
    }
    
    .footer-nav ul {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

<script>
  // ページトップへスクロールする動作
  document.addEventListener('astro:page-load', () => {
    const toTop = document.getElementById('to-top');
    if (toTop) {
      toTop.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  });
</script>
