<style>
  .footer {
    background-color: #f5f5f5;
    padding: var(--spacing-lg) 0 var(--spacing-sm);
    margin-top: var(--spacing-xl);
  }
  
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
  }
  
  .footer-top {
    display: flex;
    justify-content: center;
    margin-bottom: var(--spacing-md);
  }
  
  #to-top {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-accent);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    text-decoration: none;
    transition: all 0.3s ease;
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 99;
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
  }
  
  #to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  #to-top:hover {
    background-color: #c62b38;
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  /* タッチデバイス対応 */
  @media (hover: none) {
    #to-top:hover {
      transform: none;
      box-shadow: none;
    }
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1fr; /* モバイルファーストで1カラム */
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .footer-logo img {
    margin-bottom: var(--spacing-sm);
    max-width: 180px;
    height: auto;
  }
  
  .address {
    margin-bottom: var(--spacing-xs);
    font-size: var(--font-size-sm);
    line-height: 1.6;
  }
  
  .tel {
    font-size: var(--font-size-sm);
    margin-bottom: var(--spacing-sm);
  }
  
  .footer-nav-container {
    width: 100%;
  }
  
  .footer-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* モバイルでは2カラム */
    gap: var(--spacing-xs);
  }
  
  .footer-nav a {
    color: var(--color-primary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color 0.2s ease;
    padding: var(--spacing-xs) 0;
    display: block;
  }
  
  .footer-nav a:hover {
    color: var(--color-accent);
  }
  
  .footer-cta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    align-items: center; /* モバイルでは中央揃え */
  }
  
  .btn-primary {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.75rem 1rem;
    border-radius: 4px;
    text-align: center;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    width: 100%; /* モバイルでは幅いっぱい */
    max-width: 300px;
  }
  
  .btn-primary:hover {
    background-color: #c62b38;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(230, 57, 70, 0.2);
  }
  
  /* タッチデバイス対応 */
  @media (hover: none) {
    .btn-primary:hover {
      transform: none;
      box-shadow: none;
    }
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center; /* モバイルでは中央揃え */
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-primary);
    color: white;
    transition: all 0.2s ease;
  }
  
  .social-links a:hover {
    background-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  /* タッチデバイス対応 */
  @media (hover: none) {
    .social-links a:hover {
      transform: none;
      box-shadow: none;
    }
  }
  
  .copyright {
    text-align: center;
    border-top: 1px solid #ddd;
    padding-top: var(--spacing-sm);
    font-size: var(--font-size-xs);
    color: var(--color-secondary);
  }
  
  /* タブレット (640px以上) */
  @media (min-width: 640px) {
    .footer-container {
      padding: 0 var(--spacing-md);
    }
    
    .footer-nav ul {
      grid-template-columns: repeat(3, 1fr); /* タブレットでは3カラム */
    }
  }
  
  /* タブレット以上 (768px以上) */
  @media (min-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr 2fr;
    }
    
    .footer-nav-container {
      display: flex;
      justify-content: center;
    }
    
    .footer-nav ul {
      width: 100%;
    }
  }
  
  /* デスクトップ (1024px以上) */
  @media (min-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr 1fr;
    }
    
    .footer-cta {
      align-items: flex-start; /* デスクトップでは左揃え */
    }
    
    .btn-primary {
      width: auto;
    }
    
    .social-links {
      justify-content: flex-start; /* デスクトップでは左揃え */
    }
    
    .footer-nav ul {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  /* アクセシビリティ対応 - キーボードフォーカスの視覚化 */
  .footer-nav a:focus,
  .btn-primary:focus,
  .social-links a:focus,
  #to-top:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>

<script>
  // ページトップへスクロールする動作
  document.addEventListener('astro:page-load', () => {
    const toTop = document.getElementById('to-top');
    if (toTop) {
      // クリックイベント - ページトップへスムーズスクロール
      toTop.addEventListener('click', (e) => {
        e.preventDefault();
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
      
      // スクロール量に応じてトップへ戻るボタンの表示/非表示を切り替え
      const toggleToTopButton = () => {
        const scrollY = window.scrollY || document.documentElement.scrollTop;
        
        if (scrollY > 300) {
          toTop.classList.add('visible');
        } else {
          toTop.classList.remove('visible');
        }
      };
      
      // スクロールイベント
      window.addEventListener('scroll', toggleToTopButton, { passive: true });
      
      // 初期表示状態を設定
      toggleToTopButton();
    }
  });
</script>
